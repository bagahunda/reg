.links
  padding 50px 0
  display flex
  flex-direction: column
  align-items: center

.links__item
  display block
  // padding 2px
  width 100%
  max-width 600px
  color inherit
  text-decoration none
  outline none
  // background-image: linear-gradient(to right, rgb(236, 72, 153), rgb(239, 68, 68), rgb(234, 179, 8))
  box-shadow: rgba(38, 87, 88, 0) 0px 0px 0px 0px, rgba(38, 87, 88, 0) 0px 0px 0px 0px, rgba(38, 87, 88, 0.3) 0px 20px 25px -5px, rgba(38, 87, 88, 0.3) 0px 8px 10px -6px
  border-radius 16px

  &:active, &:hover
    color inherit
    text-decoration none

  &:not(:last-child)
    margin-bottom 2em


.links__item  h3
  margin-bottom 0
  padding 1.5rem
  font-size 2rem
  text-transform uppercase
  text-align center
  background-color #ffffff
  border-radius:  16px
  cursor pointer

  +below(500px)
    padding 1rem
    font-size 1rem
