.header
  padding: 0.5em 0
  background-color: #fff
  box-shadow: 0 10px 20px 0 rgba(50,65,141,.1)
  position relative
  z-index 2

  .container--flex
    justify-content center
    align-items center

    +below(992px)
      flex-direction: row

    +below(810px)
      flex-direction: column

  h1
    margin: 0
    display: inline-flex
    flex-direction: column
    align-items: center
    font-size: 1em
    font-weight: 500
    text-align center
    color: rgb(38, 87, 88)

    span
      font-size: 0.5em

  .logo
    font-size: clamp(2rem, -0.4742rem + 6.1856vw, 2.75rem)

    +below(480px)
      font-size: clamp(2rem, -0.4742rem + 6.1856vw, 1.75rem)
