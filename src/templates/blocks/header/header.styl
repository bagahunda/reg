.header
  position fixed
  top 0
  left 0
  width 100%
  padding: 0.5em 0
  transition: all 0.3s ease-in-out
  z-index 9

  &--scrolled
    background: #fff
    box-shadow: 0 10px 20px 0 rgba(50,65,141,.1)

  .container--flex
    justify-content space-between
    align-items center

  h1
    margin: 0
    display: inline-flex
    flex-direction: column
    align-items: flex-end
    font-size: 1em
    font-weight: 500

    span
      font-size: 0.5em

  .logo
    font-size: clamp(2rem, -0.4742rem + 6.1856vw, 2.75rem)
