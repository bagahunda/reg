.login
  width 90%
  padding 1em
  max-width 600px
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background-color #fff
  border-radius 10px

  @media screen and (max-height: 720px)
    padding-top 120px

  h2
    font-size: 2.5rem
    line-height: 1.2
    text-align center
